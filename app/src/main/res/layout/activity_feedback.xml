<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ececec">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/wh12.0dimens12.0dp"
                android:paddingTop="@dimen/wh8.0dimens8.0dp"
                android:paddingRight="@dimen/wh12.0dimens12.0dp"
                android:paddingBottom="@dimen/wh8.0dimens8.0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择反馈类型"
                    android:textColor="@color/fontBlack"
                    android:textSize="16sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wh12.0dimens12.0dp"
                    android:nestedScrollingEnabled="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wh12.0dimens12.0dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/wh12.0dimens12.0dp"
                android:paddingTop="@dimen/wh8.0dimens8.0dp"
                android:paddingRight="@dimen/wh12.0dimens12.0dp"
                android:paddingBottom="@dimen/wh8.0dimens8.0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="补充详情"
                    android:textColor="@color/fontBlack"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wh12.0dimens12.0dp"
                    android:background="@null"
                    android:gravity="left|top"
                    android:hint="请写下您的意见或建议"
                    android:minHeight="@dimen/wh50.0dimens50.0dp"
                    android:textColor="@color/fontBlack"
                    android:textColorHint="@color/fontGray"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wh12.0dimens12.0dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/wh12.0dimens12.0dp"
                android:paddingTop="@dimen/wh8.0dimens8.0dp"
                android:paddingRight="@dimen/wh12.0dimens12.0dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="填写联系方式"
                    android:textColor="@color/fontBlack"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh49.0dimens49.0dp"
                    android:layout_marginTop="@dimen/wh12.0dimens12.0dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请填写QQ号（必填）"
                    android:textColor="@color/fontBlack"
                    android:textColorHint="@color/fontGray"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh0.5dimens0.5dp"
                    android:background="@color/divider_color" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh49.0dimens49.0dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请填写手机号（）"
                    android:textColor="@color/fontBlack"
                    android:textColorHint="@color/fontGray"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh48.0dimens48.0dp"
                android:layout_marginLeft="@dimen/wh12.0dimens12.0dp"
                android:layout_marginTop="@dimen/wh20.0dimens20.0dp"
                android:layout_marginRight="@dimen/wh12.0dimens12.0dp"
                android:layout_marginBottom="@dimen/wh30.0dimens30.0dp"
                android:background="@drawable/shape_common_btn_solid_pressed"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
