<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ececec">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/wh12.0dimens12.0dp"
                android:paddingTop="@dimen/wh8.0dimens8.0dp"
                android:paddingRight="@dimen/wh12.0dimens12.0dp"
                android:paddingBottom="@dimen/wh8.0dimens8.0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择反馈类型"
                    android:textStyle="bold"
                    android:textColor="@color/common_h1"
                    android:textSize="16sp" />

                <GridView
                    android:id="@+id/mRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh92.0dimens92.0dp"
                    android:layout_marginTop="@dimen/wh18.0dimens18.0dp"
                    android:layout_marginBottom="@dimen/wh8.0dimens8.0dp"
                    android:gravity="center_horizontal"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="@dimen/wh14.0dimens14.0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wh12.0dimens12.0dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/wh12.0dimens12.0dp"
                android:paddingTop="@dimen/wh8.0dimens8.0dp"
                android:paddingRight="@dimen/wh12.0dimens12.0dp"
                android:paddingBottom="@dimen/wh8.0dimens8.0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="补充详情"
                    android:textStyle="bold"
                    android:textColor="@color/common_h1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/suggest_detail_info_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/wh12.0dimens12.0dp"
                    android:background="@drawable/shape_white_bg"
                    android:gravity="left|top"
                    android:hint="请写下您的意见或建议"
                    android:minHeight="@dimen/wh86.0dimens86.0dp"
                    android:padding="@dimen/wh6.0dimens6.0dp"
                    android:textColor="@color/fontBlack"
                    android:textColorHint="@color/fontGray"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wh12.0dimens12.0dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/wh12.0dimens12.0dp"
                android:paddingTop="@dimen/wh8.0dimens8.0dp"
                android:paddingRight="@dimen/wh12.0dimens12.0dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="填写联系方式"
                    android:textColor="@color/common_h1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/qq_num"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh54.0dimens54.0dp"
                    android:layout_marginTop="@dimen/wh12.0dimens12.0dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请填写QQ号（必填）"
                    android:padding="@dimen/wh6.0dimens6.0dp"
                    android:textColor="@color/fontBlack"
                    android:textColorHint="@color/fontGray"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh0.5dimens0.5dp"
                    android:background="@color/divider_color" />

                <EditText
                    android:id="@+id/phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/wh54.0dimens54.0dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请填写手机号（）"
                    android:padding="@dimen/wh6.0dimens6.0dp"
                    android:textColor="@color/fontBlack"
                    android:textColorHint="@color/fontGray"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/submit_btn"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/wh48.0dimens48.0dp"
                android:layout_marginLeft="@dimen/wh12.0dimens12.0dp"
                android:layout_marginTop="@dimen/wh20.0dimens20.0dp"
                android:layout_marginRight="@dimen/wh12.0dimens12.0dp"
                android:layout_marginBottom="@dimen/wh30.0dimens30.0dp"
                android:background="@drawable/selector_stroke_roundredcir"
                android:clickable="true"
                android:gravity="center"
                android:padding="10.0dip"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="16.0sp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>
