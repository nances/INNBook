<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/ivBookCoverCardView"
        android:layout_width="@dimen/wh64.0dimens64.0dp"
        android:layout_height="@dimen/wh88.0dimens88.0dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">

        <ImageView
            android:id="@+id/ivBookCover"
            android:layout_width="@dimen/wh64.0dimens64.0dp"
            android:layout_height="@dimen/wh88.0dimens88.0dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/cover_default" />
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ivBookCoverCardView">

        <TextView
            android:id="@+id/tvBookListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="武侠世界自由行"
            android:textColor="@color/common_h1"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLatelyFollower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBookListTitle"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="549人在追 | "
            android:textColor="@color/common_h2"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvRetentionRatio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBookListTitle"
            android:layout_toRightOf="@id/tvLatelyFollower"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="60.1%读者留存 | "
            android:textColor="@color/common_h2"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvBookListAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvLatelyFollower"
            android:layout_marginTop="@dimen/wh14.0dimens14.0dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="大江入海著"
            android:textColor="@color/common_h2"
            android:textSize="13sp" />


    </RelativeLayout>

</RelativeLayout>