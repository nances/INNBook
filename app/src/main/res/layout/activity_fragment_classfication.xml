<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="@dimen/wh36.0dimens36.0dp"
            android:layout_height="@dimen/wh36.0dimens36.0dp"
            android:layout_centerVertical="true"
            android:padding="@dimen/wh8.0dimens8.0dp"
            android:src="@drawable/black_back_icon" />

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magicIndicator"
            android:layout_width="@dimen/wh120.0dimens120.0dp"
            android:layout_height="@dimen/wh48.0dimens48.0dp"
            android:layout_centerHorizontal="true"
            android:background="@color/common_bg" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>