<?xml version="1.0" encoding="utf-8"?>
<com.kaqi.reader.view.ReboundScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:stv="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh48.0dimens48.0dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/uc_msg_iv"
                android:paddingLeft="10dp"
                android:paddingRight="8dp"
                android:src="@drawable/icon_setting"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/uc_msg_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:src="@drawable/icon_msg"
                android:visibility="gone" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/common_bg"
                    android:minHeight="40dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/frag_uc_nickname_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="37dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/regisiter_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_stroke_roundcir"
                            android:gravity="center"
                            android:text="注册"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/login_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:background="@drawable/selector_stroke_roundredcir"
                            android:gravity="center"
                            android:text="登陆"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <ImageView
                android:id="@+id/uc_avater"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/avatar_default" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh0.5dimens0.5dp"
            android:layout_marginTop="@dimen/wh10.0dimens10.0dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wh10.0dimens10.0dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/money_detail_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/wh12.0dimens12.0dp"
                android:paddingBottom="@dimen/wh12.0dimens12.0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0.00"
                    android:textColor="@color/common_h1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="我的金币"
                    android:textColor="@color/common_h2"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/wh0.5dimens0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/wh12.0dimens12.0dp"
                android:paddingBottom="@dimen/wh12.0dimens12.0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0.00"
                    android:textColor="@color/common_h1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="今日金币"
                    android:textColor="@color/common_h2"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/wh0.5dimens0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/wh12.0dimens12.0dp"
                android:paddingBottom="@dimen/wh12.0dimens12.0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0.00"
                    android:textColor="@color/common_h1"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="今日阅读（分钟）"
                    android:textColor="@color/common_h2"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.kaqi.reader.view.textview.SuperTextView
                android:id="@+id/read_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh50.0dimens50.0dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/wh20.0dimens20.0dp"
                android:background="@color/common_bg"
                stv:sDividerLineType="both"
                stv:sLeftIconRes="@drawable/history_icon"
                stv:sLeftTextString="历史阅读" />

            <com.kaqi.reader.view.textview.SuperTextView
                android:id="@+id/message_icon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh50.0dimens50.0dp"
                stv:sLeftIconRes="@drawable/message_mine_icon"
                stv:sLeftTextString="我的消息" />


            <com.kaqi.reader.view.textview.SuperTextView
                android:id="@+id/feedback_stv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh50.0dimens50.0dp"
                android:layout_marginTop="@dimen/wh20.0dimens20.0dp"
                stv:sDividerLineType="both"
                stv:sLeftIconRes="@drawable/suggestion_mine_icon"
                stv:sLeftTextString="意见反馈" />


            <com.kaqi.reader.view.textview.SuperTextView
                android:id="@+id/help_stv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh50.0dimens50.0dp"
                stv:sLeftIconRes="@drawable/help_icon"
                stv:sLeftTextString="帮助" />


            <com.kaqi.reader.view.textview.SuperTextView
                android:id="@+id/uc_setting_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh50.0dimens50.0dp"
                stv:sLeftIconRes="@drawable/setting_mine_icon"
                stv:sLeftTextString="设置" />

            <com.kaqi.reader.view.textview.SuperTextView
                android:id="@+id/about_us"
                android:layout_width="match_parent"
                android:layout_height="@dimen/wh50.0dimens50.0dp"
                stv:sLeftIconRes="@drawable/about_mine_icon"
                stv:sLeftTextString="关于" />
        </LinearLayout>

    </LinearLayout>
</com.kaqi.reader.view.ReboundScrollView>