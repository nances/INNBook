<?xml version="1.0" encoding="utf-8"?>
<com.kaqi.niuniu.ireader.view.DisInterceptNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:layout_collapseMode="parallax">

    <LinearLayout
        android:id="@+id/user_head_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow_30"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/wh48.0dimens48.0dp"
            android:layout_height="@dimen/wh48.0dimens48.0dp"
            app:layout_collapseMode="pin">

            <ImageView
                android:id="@+id/tv_back_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="8dp"
                android:src="@drawable/ab_back" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wh6.5dimens6.5dp"
            android:padding="15dp">

            <android.support.v7.widget.CardView
                android:id="@+id/ivBookCoverCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/wh16.0dimens16.0dp"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp">

                <ImageView
                    android:id="@+id/ivBookCover"
                    android:layout_width="@dimen/wh98.0dimens98.0dp"
                    android:layout_height="@dimen/wh132.0dimens132.0dp"
                    android:layout_alignParentLeft="true"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop" />
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/ivBookCoverCardView">

                <TextView
                    android:id="@+id/tvBookListTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/wh16.0dimens16.0dp"
                    android:layout_marginBottom="@dimen/wh20.0dimens20.0dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="1dp"
                    android:lineSpacingMultiplier="1.1"
                    android:singleLine="true"
                    android:text="武侠世界自由行"
                    android:textColor="@color/read_theme_white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBookListAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvBookListTitle"
                    android:ellipsize="end"
                    android:lineSpacingExtra="1dp"
                    android:lineSpacingMultiplier="1.1"
                    android:singleLine="true"
                    android:text="w风雪 | "
                    android:textColor="@color/common_h3"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCatgory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvBookListTitle"
                    android:layout_marginStart="0dp"
                    android:layout_toEndOf="@+id/tvBookListAuthor"
                    android:layout_toRightOf="@id/tvBookListAuthor"
                    android:ellipsize="end"
                    android:lineSpacingExtra="1dp"
                    android:lineSpacingMultiplier="1.1"
                    android:singleLine="true"
                    android:text="仙侠 | "
                    android:textColor="@color/common_h2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvWordCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvBookListTitle"
                    android:layout_toRightOf="@id/tvCatgory"
                    android:ellipsize="end"
                    android:lineSpacingExtra="1dp"
                    android:lineSpacingMultiplier="1.1"
                    android:singleLine="true"
                    android:text="594万字"
                    android:textColor="@color/common_h2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvLatelyUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvBookListAuthor"
                    android:layout_marginTop="@dimen/wh20.0dimens20.0dp"
                    android:ellipsize="end"
                    android:lineSpacingExtra="1dp"
                    android:lineSpacingMultiplier="1.1"
                    android:singleLine="true"
                    android:text="4月前"
                    android:textColor="@color/common_h2"
                    android:textSize="14sp" />


            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</com.kaqi.niuniu.ireader.view.DisInterceptNestedScrollView>