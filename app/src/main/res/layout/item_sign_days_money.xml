<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/wh4.0dimens4.0dp"
    android:background="@drawable/btn_sign_days_font"
    android:padding="@dimen/wh10.0dimens10.0dp"

    >

    <TextView
        android:id="@+id/item_days_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="12"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_days_money"
        android:gravity="center_horizontal"
        android:text="金币"
        android:textSize="8sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/ivSelected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/btn_font_selector"
        android:visibility="gone" />
</RelativeLayout>