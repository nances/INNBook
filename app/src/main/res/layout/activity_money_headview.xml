<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_head_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_marginLeft="@dimen/wh14.0dimens14.0dp"
        android:layout_marginTop="@dimen/wh8.0dimens8.0dp"
        android:layout_marginRight="@dimen/wh14.0dimens14.0dp"
        android:layout_marginBottom="@dimen/wh20.0dimens20.0dp"
        android:background="@drawable/shape_yellw30_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/wh14.0dimens14.0dp"
            android:layout_marginTop="@dimen/wh8.0dimens8.0dp"
            android:text="总金币"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh54.0dimens54.0dp">

            <TextView
                android:id="@+id/money_total_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/wh14.0dimens14.0dp"
                android:gravity="center"
                android:text="12000"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sign_every_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/wh14.0dimens14.0dp"
                android:background="@drawable/selector_stroke_roundred_sel"
                android:enabled="true"
                android:gravity="center"
                android:text="去领取"
                android:textColor="@android:color/white" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/money_detail_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wh14.0dimens14.0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/wh12.0dimens12.0dp"
                android:paddingRight="@dimen/wh24.0dimens24.0dp"
                android:paddingBottom="@dimen/wh12.0dimens12.0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="今日金币"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/wh8.0dimens8.0dp"
                    android:text="0.00"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <View
                android:layout_width="@dimen/wh0.5dimens0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/wh4.0dimens4.0dp"
                android:layout_marginBottom="@dimen/wh4.0dimens4.0dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wh20.0dimens20.0dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/wh12.0dimens12.0dp"
                android:paddingRight="@dimen/wh24.0dimens24.0dp"
                android:paddingBottom="@dimen/wh12.0dimens12.0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="累计获取金币"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/leiji_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/wh8.0dimens8.0dp"
                    android:text="0.00"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/wh0.5dimens0.5dp"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/wh14.0dimens14.0dp"
                android:paddingTop="@dimen/wh8.0dimens8.0dp"
                android:paddingBottom="@dimen/wh8.0dimens8.0dp"
                android:text="10000 金币 = 1元"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>