<?xml version="1.0" encoding="utf-8"?>
<com.kaqi.reader.view.DisInterceptNestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/middle_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/wh192.0dimens192.0dp"
    android:tag="middle"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.kaqi.reader.view.DrawableCenterButton
                    android:id="@+id/btnJoinCollection"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_common_btn_solid_selector"
                    android:clickable="true"
                    android:drawableLeft="@drawable/book_detail_info_add_img"
                    android:drawablePadding="5dp"
                    android:padding="10dp"
                    android:text="@string/book_detail_join_collection"
                    android:textColor="@color/white" />

                <com.kaqi.reader.view.DrawableCenterButton
                    android:id="@+id/btnRead"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_common_btn_solid_selector"
                    android:clickable="true"
                    android:drawableLeft="@drawable/book_detail_info_search_img"
                    android:drawablePadding="5dp"
                    android:padding="10dp"
                    android:text="开始阅读"
                    android:textColor="@color/white" />
            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/common_divider_narrow" />



    </LinearLayout>
</com.kaqi.reader.view.DisInterceptNestedScrollView>