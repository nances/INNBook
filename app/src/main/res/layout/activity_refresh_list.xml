<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />
	
	<com.kaqi.niuniu.ireader.widget.RefreshLayout
		android:id="@+id/refresh_layout"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<com.kaqi.niuniu.ireader.widget.refresh.ScrollRefreshRecyclerView
			android:id="@+id/refresh_rv_content"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_below="@+id/recommendRL"></com.kaqi.niuniu.ireader.widget.refresh.ScrollRefreshRecyclerView>

	</com.kaqi.niuniu.ireader.widget.RefreshLayout>
</LinearLayout>