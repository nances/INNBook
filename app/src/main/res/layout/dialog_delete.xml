<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wh70.0dimens70.0dp">

        <CheckBox
            android:id="@+id/delete_cb_select"
            android:layout_width="@dimen/wh24.0dimens24.0dp"
            android:layout_height="@dimen/wh24.0dimens24.0dp"
            android:layout_marginTop="@dimen/wh8.0dimens8.0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/wh52.0dimens52.0dp"
            android:background="@drawable/checkbox_style"
            android:button="@null"
            android:padding="@dimen/wh28.0dimens28.0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/wh14.0dimens14.0dp"
            android:layout_marginTop="@dimen/wh8.0dimens8.0dp"
            android:layout_toRightOf="@+id/delete_cb_select"
            android:text="同时删除源文件"
            android:textColor="@color/common_h2"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>