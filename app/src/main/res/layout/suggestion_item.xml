<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sign_item_days"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/wh4.0dimens4.0dp"
    android:background="@drawable/btn_sign_days_font">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/item_days_money"
            android:layout_width="@dimen/wh120.0dimens120.0dp"
            android:layout_height="@dimen/wh36.0dimens36.0dp"
            android:gravity="center"
            android:padding="@dimen/wh2.5dimens2.5dp"
            android:text="提现问题"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/ivSelected"
        android:layout_width="@dimen/wh120.0dimens120.0dp"
        android:layout_height="@dimen/wh36.0dimens36.0dp"
        android:layout_gravity="center"
        android:background="@drawable/btn_sign_day_selector"
        android:visibility="visible" />
</FrameLayout>