<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_book"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/wh10.0dimens10.0dp"
    android:layout_marginRight="@dimen/wh10.0dimens10.0dp"
    android:layout_marginTop="@dimen/wh10.0dimens10.0dp"
    android:background="@drawable/shape_white_bg"
    android:padding="@dimen/wh10.0dimens10.0dp">

    <RelativeLayout
        android:id="@+id/ivBookCoverCardView"
        android:layout_width="@dimen/wh64.0dimens64.0dp"
        android:layout_height="@dimen/wh88.0dimens88.0dp">

        <ImageView
            android:id="@+id/ivRecommendCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:scaleType="fitXY" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wh88.0dimens88.0dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/wh10.0dimens10.0dp"
        android:layout_toRightOf="@+id/ivBookCoverCardView"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRecommendTitle"
            style="@style/text_style_Spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxEms="15"
            android:maxLines="1"
            android:textColor="@color/common_h1"
            android:textSize="16sp"
            tools:text="逆鳞" />

        <TextView
            android:id="@+id/ivUnReadDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:background="@drawable/shape_blue_shape4_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/wh4.0dimens4.0dp"
            android:paddingTop="@dimen/wh2.0dimens2.0dp"
            android:paddingRight="@dimen/wh4.0dimens4.0dp"
            android:paddingBottom="@dimen/wh2.0dimens2.0dp"
            android:text="连载中"
            android:textColor="@color/white"
            android:textSize="8sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvRecommendShort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRecommendTitle"
            android:layout_marginTop="@dimen/wh6.0dimens6.0dp"
            android:lineSpacingExtra="1dp"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="2"
            android:paddingRight="@dimen/wh2.0dimens2.0dp"
            android:text="剑无止境！梦醒时分！情非得已！雄霸天下又如何？江山美人，鱼与熊掌？长生不老，老而不死是为贼？独孤无双，唯吾不败……"
            android:textColor="@color/common_h2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvBookListAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRecommendShort"
            android:layout_marginTop="@dimen/wh10.0dimens10.0dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="大江入海著"
            android:textColor="@color/common_h2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvBookCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRecommendShort"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/wh10.0dimens10.0dp"
            android:background="@drawable/shape_tag_recommend_yellow30_cat"
            android:ellipsize="end"
            android:paddingLeft="@dimen/wh4.0dimens4.0dp"
            android:paddingTop="@dimen/wh2.0dimens2.0dp"
            android:paddingRight="@dimen/wh4.0dimens4.0dp"
            android:paddingBottom="@dimen/wh2.0dimens2.0dp"
            android:singleLine="true"
            android:text="现代都市"
            android:textColor="@color/common_h2"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tvBookTxtSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRecommendShort"
            android:layout_marginTop="@dimen/wh10.0dimens10.0dp"
            android:layout_marginRight="@dimen/wh4.0dimens4.0dp"
            android:layout_toLeftOf="@id/tvBookCat"
            android:background="@drawable/shape_tag_recommend_red_total"
            android:ellipsize="end"
            android:paddingLeft="@dimen/wh4.0dimens4.0dp"
            android:paddingTop="@dimen/wh2.0dimens2.0dp"
            android:paddingRight="@dimen/wh4.0dimens4.0dp"
            android:paddingBottom="@dimen/wh2.0dimens2.0dp"
            android:singleLine="true"
            android:text="12.3万"
            android:textColor="@color/common_h2"
            android:textSize="8sp" />
    </RelativeLayout>


</RelativeLayout>