<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg"
    android:padding="@dimen/wh8.0dimens8.0dp">


    <android.support.v7.widget.CardView
        android:id="@+id/ivBookCoverCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/wh16.0dimens16.0dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">

        <ImageView
            android:id="@+id/imageIv"
            android:layout_width="@dimen/wh86.0dimens86.0dp"
            android:layout_height="@dimen/wh114.0dimens114.0dp"
            android:layout_alignParentLeft="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/titleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivBookCoverCardView"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/wh6.0dimens6.0dp"
        android:layout_toRightOf="@+id/ivBookCoverCardView"
        android:text="修正全能仙少"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/scoreTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/titleTv"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/wh2.0dimens2.0dp"
        android:text="分"
        android:textColor="@color/yellow_50"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/retentionRatioTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/titleTv"
        android:layout_toLeftOf="@+id/scoreTv"
        android:text="8.4"
        android:textColor="@color/yellow_50"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/introTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/wh6.0dimens6.0dp"
        android:layout_toRightOf="@+id/ivBookCoverCardView"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="重试阿拉斯加到了放假啊可是"
        android:textColor="@color/common_h2"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ivBookCoverCardView"
        android:layout_marginLeft="@dimen/wh6.0dimens6.0dp"
        android:layout_toRightOf="@+id/ivBookCoverCardView"
        android:text="完结 2000万字"
        android:textColor="@color/common_h2"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/minorCateTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivBookCoverCardView"
        android:layout_alignParentRight="true"
        android:text="历史穿越"
        android:textColor="@color/common_h2"
        android:textSize="@dimen/sp_12" />


</RelativeLayout>
