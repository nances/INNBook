<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/common_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:paddingLeft="12.0dip"
        android:paddingTop="7.0dip"
        android:paddingRight="12.0dip"
        android:paddingBottom="7.0dip">

        <TextView
            style="@style/user_info_label_style"
            android:text="头像" />


        <com.kaqi.niuniu.ireader.widget.textview.CircleImageView
            android:id="@+id/avatar_image"
            app:civ_border_color="@color/grey_400"
            app:civ_border_width="@dimen/wh2.0dimens2.0dp"
            android:layout_width="56.0dip"
            android:layout_height="56.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1.0dip"
            android:src="@drawable/avatar_default" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16.0dip">

        <TextView
            style="@style/user_info_label_style"
            android:text="用户名" />

        <TextView
            android:id="@+id/user_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="8.0dip"
            android:paddingTop="3.0dip"
            android:paddingBottom="3.0dip"
            android:text="用户名"
            android:textSize="14.0sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/wh0.5dimens0.5dp"
        android:background="@color/grey_100" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16.0dip">

        <TextView
            style="@style/user_info_label_style"
            android:text="用户ID" />

        <EditText
            android:id="@+id/nick_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:focusable="false"
            android:gravity="right"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/common_h2"
            android:textColorHint="#d7d7d7"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/wh0.5dimens0.5dp"
        android:background="@color/grey_100" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16.0dip"
        android:visibility="visible">

        <TextView
            style="@style/user_info_label_style"
            android:text="性别" />

        <TextView
            android:id="@+id/gender_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_arrow_right"
            android:drawablePadding="8.0dip"
            android:paddingTop="3.0dip"
            android:paddingBottom="3.0dip"
            android:text="请选择"
            android:textColor="@color/common_h2"
            android:textSize="14.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12.0dip"
        android:visibility="gone">

        <TextView
            style="@style/user_info_label_style"
            android:text="生日" />

        <TextView
            android:id="@+id/birthday_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_arrow_right"
            android:drawablePadding="8.0dip"
            android:paddingTop="3.0dip"
            android:paddingBottom="3.0dip"
            android:text="请选择"
            android:textColor="@color/common_h2"
            android:textSize="14.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="12.0dip"
        android:visibility="gone">

        <TextView
            style="@style/user_info_label_style"
            android:text="所在地" />

        <TextView
            android:id="@+id/location_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_arrow_right"
            android:drawablePadding="8.0dip"
            android:paddingTop="3.0dip"
            android:paddingBottom="3.0dip"
            android:text="请选择"
            android:textColor="@color/common_h2"
            android:textSize="14.0sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/exit_out"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wh48.0dimens48.0dp"
        android:layout_marginLeft="@dimen/wh14.0dimens14.0dp"
        android:layout_marginTop="@dimen/wh68.0dimens68.0dp"
        android:layout_marginRight="@dimen/wh14.0dimens14.0dp"
        android:background="@drawable/selector_stroke_roundcir"
        android:clickable="true"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/common_h1"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>
