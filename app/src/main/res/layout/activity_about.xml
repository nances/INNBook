<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wh270.0dimens270.0dp">

        <ImageView
            android:layout_width="@dimen/wh92.0dimens92.0dp"
            android:layout_height="@dimen/wh92.0dimens92.0dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/app_icon" />

    </RelativeLayout>

    <com.kaqi.niuniu.ireader.widget.textview.SuperTextView
        android:id="@+id/version_vi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/wh50.0dimens50.0dp"
        android:layout_marginTop="20dp"
        android:background="@color/common_bg"
        stv:sDividerLineType="both"
        stv:sLeftTextString="版本信息：1.0.0" />
</LinearLayout>
