            <stroke android:width="@dimen/wh0.5dimens0.5dp" android:color="@color/black" />
            <corners android:radius="18dp" />
            <padding android:bottom="6dp" android:left="20dp" android:right="20dp" android:top="6dp" />
        </shape>
    </item>

</selector>